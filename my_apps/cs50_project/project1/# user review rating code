# user review rating code
    elif request.method == "POST":
        user_rating = request.form.get("rating")
        user_review = request.form.get("review")

        # checking for user_id
        user_id = session["user_id"]
        # commit the review to database table review
        user_feedback = db.execute("INSERT INTO reviews (book_id, rating, text, user_id) VALUES (%d, %d, %s, %d);" % (book_id, user_rating, user_review, user_id))
        db.commit()
        return redirect(url_for("/book/<int:book_id>"))